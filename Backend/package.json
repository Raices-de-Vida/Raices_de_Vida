{
    "name": "raices-de-vida-backend",
    "version": "1.0.1",
    "description": "Backend para el proyecto Ra√≠ces de Vida",
    "main": "src/index.js",
    "scripts": {
        "start": "node src/index.js",
        "dev": "NODE_ENV=development node -r dotenv/config src/index.js dotenv_config_path=.env.local",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:security": "jest src/tests/security --verbose",
        "test:security:watch": "jest src/tests/security --watch --verbose",
        "test:security:auto": "jest src/tests/security/auth.security.test.js src/tests/security/input.validation.test.js --verbose",
        "test:security:manual": "echo === PRUEBAS MANUALES DE SEGURIDAD === && echo Para ejecutar pruebas manuales, revisa el archivo src/tests/security/manual.security.guide.md"
    },
    "jest": {
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "<rootDir>/src/tests/setup.js"
        ],
        "testMatch": [
            "<rootDir>/src/tests/**/*.test.js",
            "<rootDir>/src/**/*.test.js"
        ],
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/tests/",
            "!src/index.js"
        ]
    },
    "dependencies": {
        "@react-native-async-storage/async-storage": "^2.1.2",
        "@react-native-community/netinfo": "^9.5.0",
        "bcryptjs": "^3.0.2",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^5.1.0",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.14.1",
        "sequelize": "^6.37.7"
    },
    "devDependencies": {
        "jest": "^30.0.4",
        "nodemon": "^3.0.2",
        "sqlite3": "^5.1.7",
        "supertest": "^7.1.3",
        "express-rate-limit": "^7.1.5"
    }
}